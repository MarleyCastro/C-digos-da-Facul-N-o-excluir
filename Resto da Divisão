#include <stdio.h>

int main(){
    int n1, n2, resto,r;

    printf("\n digite um numero:");
    scanf("%d", &n1);

    printf("\n digite o seungo numero:");
    scanf("%d", &n2);

    r= n1/n2;

    printf("o resultado da divisao inteira: %d / %d = %d", n1, n2, r);

    resto = n1%2;
    printf("\n resto divisao: %d", resto);

    return 0;
}
