#include <stdio.h>

int main(){
    float nota1, nota2, media;
    int resp;

    do
    {
        printf("Digite a primeira nota:");
        scanf("%f", &nota1);

        printf("Digite a segunda nota:");
        scanf("%f", &nota2);

        media = (nota1 + nota2)/2;
        printf("O total da media: %d", media);

        printf("Digite 1 para continua ou 2 para sair");
        scanf("%d", &resp);
    } while (resp == 1);
    
    return 0;
}
